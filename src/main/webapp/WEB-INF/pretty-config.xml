  <!-- Tutorials -->
  <!-- http://ocpsoft.org/docs/prettyfaces/3.3.3/en-US/html/Configuration.html#config.mapping.parents -->
  <url-mapping id="tutorials">
    <pattern value="/tutorials" />
    <view-id value="/index.xhtml" />
  </url-mapping>
  <url-mapping id="category" parentId="tutorials">
    <pattern value="/#{categorySlug}" />
    <view-id value="/category.xhtml" />
  </url-mapping>
  <url-mapping id="playlist" parentId="category">
    <pattern value="/#{playlistSlug}-#{playlistId}" />
    <view-id value="/playlist.xhtml" />
  </url-mapping>
