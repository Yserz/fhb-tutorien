    <pattern value="/tutorials" />
    <view-id value="/categories.xhtml" />
  </url-mapping>
  <url-mapping id="playlists" parentId="tutorials">
    <!--<pattern value="/#{categorySlug: playlistController.category.slug}/playlists" />-->
    <pattern value="/#{categoryId : playlistController.categoryId}/playlists" />
    <view-id value="/playlists.xhtml" />
  </url-mapping>
  <url-mapping id="videos" parentId="playlists">
    <!--<pattern value="/#{playlistSlug}-#{playlistId}/videos" />-->
    <pattern value="/#{playlistId : videoController.playlistId}/videos" />
    <view-id value="/videos.xhtml" />
